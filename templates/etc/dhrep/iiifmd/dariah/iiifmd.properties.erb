###
# general settings
###

# some service urls
serviceBaseUrl=https://<%= scope.lookupvar('dhrep::public_hostname') %>/1.0/iiif/manifests
iiifServiceUrl=https://<%= scope.lookupvar('dhrep::public_hostname') %>/1.0/digilib/rest/IIIF
miradorUrl=https://<%= scope.lookupvar('dhrep::public_hostname') %>/1.0/iiif/mirador/?uri=
# context and conformance urls
iiifServiceContextUrl=http://iiif.io/api/image/2/context.json
iiifServiceConformance=http://iiif.io/api/image/2/level2.json
# jsonld output specific settings
jsonldContextUrl=http://iiif.io/api/presentation/2/context.json
# cache directory, needs to be existing and writeable
cacheDir=/var/dhrep/iiifmd/cache
# projects which should be listed for IIIF (comma separated)
listedProjects=<%= @iiif_enabled_projects.join(",") %>
# uris of incomplete publications, which cause errors
brokenUris=<%= @iiif_blacklist_uris.join(",") %>

