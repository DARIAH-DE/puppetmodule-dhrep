# location of this service
serviceBaseUrl=https://<%= scope.lookupvar('dhrep::public_hostname') %>/1.0/iiif/manifests

# sparql endpoint of triplestore
sparqlEndpoint=http://

# more urls
crudUrl=http://<%= scope.lookupvar('dhrep::public_hostname') %>/1.0/dcrud/rest
tgsearchUrl=http://

# Elasticsearch config
esCluster= <%= scope.lookupvar('dhrep::services::intern::elasticsearch::cluster_name') %>
esNodes=127.0.0.1:<%= scope.lookupvar('dhrep::params::elasticsearch_master_tcp_port') %>
esIndex=textgrid-public
esType=metadata

# location and conformance level of iiif service
iiifService.url=https://<%= scope.lookupvar('dhrep::public_hostname') %>/1.0/digilib/rest/IIIF
iiifService.conformance=http://iiif.io/api/image/2/level2.json

# cache directory, needs to be existing and writeable
cacheDir=/var/dhrep/iiifmd/cache

# xslt file for extracting ordered uris from mets file (from resources/xslt folder)
metsXsltFile=metsExtract.xsl

# jsonld output specific settings
jsonld.contextUrl=http://iiif.io/api/presentation/2/context.json

# textgrid projects which should be listed for IIIF (comma separated)
listedProjects=<%= @iiif_enabled_projects.join(",") %>

# url for repository website
repositoryUrl=https://repositoryUrl/

miradorUrl=https://<%= scope.lookupvar('dhrep::public_hostname') %>/1.0/iiif/mirador/?uri=

# uris of not incomplete textgrid publications, which cause errors
brokenUris=<%= @iiif_blacklist_uris.join(",") %>

# labels
publishedLabel="DARIAH-DE Repository Published Data"
publishedDescription="Published data in the DARIAH-DE Repository."
sandboxLabel="No Sandbox in DARIAH-DE Repository"
sandboxDescription="There is no sandbox in the DARIAH-DE Repository."
