# location of this service
serviceBaseUrl=https://textgridlab.org/1.0/iiif/manifests

# sparql endpoint of triplestore
sparqlEndpoint=http://localhost:9091/openrdf-sesame/repositories/textgrid-public

# tgcrud url
tgcrudUrl=https://textgridlab.org/1.0/tgcrud-public/rest
tgsearchUrl=https://textgridlab.org/1.0/tgsearch-public

# Elasticsearch config
esCluster= <%= scope.lookupvar('dhrep::services::intern::elasticsearch::cluster_name') %>
esNodes=127.0.0.1:<%= scope.lookupvar('dhrep::params::elasticsearch_master_tcp_port') %>
esIndex=textgrid-public
esType=metadata

# location and conformance level of iiif service
iiifService.url=https://textgridlab.org/1.0/digilib/rest/IIIF
iiifService.conformance=http://library.stanford.edu/iiif/image-api/1.1/compliance.html#level1

# cache directory, needs to be existing and writeable
cacheDir=/var/textgrid/iiifmd/cache

# xslt file for extracting ordered uris from mets file (from resources/xslt folder)
metsXsltFile=metsExtract.xsl

# jsonld output specific settings
jsonld.contextUrl=http://iiif.io/api/presentation/2/context.json

# textgrid projects which should be listed for IIIF (comma separated)
listedProjects=TGPR-2e532567-c3e3-36f5-3ecc-520cea7904cc,TGPR-2c283391-6ed5-70b4-2e5e-5501c856bca9,TGPR-d303e6d9-435d-4c98-aadc-5540cd346cfa,TGPR-16e20ddd-e4a5-d225-7db7-55eea81d6306,TGPR-e29f9ad6-f267-ce94-2d69-5697ae0b09b8

# url for textgridrep website
textgridrepUrl=https://textgridrep.org/browse/-/browse/

miradorUrl=https://textgridlab.org/1.0/iiif/mirador/view.html?uri=

# uris of not incomplete textgrid publications, which cause errors
brokenUris=textgrid:2524s.0,textgrid:258fc.0,textgrid:24hs0.0,textgrid:2522d.0,textgrid:2522c.0,textgrid:24js4.0
