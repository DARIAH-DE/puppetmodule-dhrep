# Attributes
monitoringInterval = 37

# Properties
property.logFilename = /var/log/dhrep/tgcrud/crud.log
property.rollbackLogFilename = /var/log/dhrep/tgcrud/rollback.log

# File appender - CRUD logging - rolled every day via logrotate.
appender.file.name = CRUD_LOGGING
appender.file.type = File
appender.file.filename = ${logFilename}
appender.file.layout.type = PatternLayout
appender.file.layout.pattern = %d{yyyy-MM-dd'T'HH:mm:ss.SSS}\t%p\t%t\t%m%n

# File appender - CRUD rollback logging - rolled every day via logrotate.
appender.file.name = CRUD_RB_LOGGING
appender.file.type = File
appender.file.filename = ${rollbackLogFilename}
appender.file.layout.type = PatternLayout
appender.file.layout.pattern = %d{yyyy-MM-dd'T'HH:mm:ss.SSS}\t%p\t%t\t%m%n

# Console appender - used for the root logger.
appender.console.name = STDOUT
appender.console.type = Console
appender.console.layout.type = PatternLayout
appender.console.layout.pattern = %d{yyyy-MM-dd'T'HH:mm:ss.SSS}\t%p\t%t\t%m%n

# Configure crud loggers.
logger.file.name = crudLogger
logger.file.level = <%= scope.lookupvar('dhrep::services::crud::log_level') %>
logger.file.additivity = false
logger.file.appenderRef.rolling.ref = CRUD_LOGGING

logger.file.name = crudRollbackLogger
logger.file.level = INFO
logger.file.additivity = false
logger.file.appenderRef.rolling.ref = CRUD_RB_LOGGING

# Configure the log4j rootLogger to avoid messages to system.out.
rootLogger.level = ERROR
rootLogger.appenderRef.stdout.ref = STDOUT
