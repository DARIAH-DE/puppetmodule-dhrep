# EPIC PID service (GWDG)
handleservice.endpoint = <%= scope.lookupvar('dariahrepository::services::pid::pid_endpoint') %>
handleservice.path = <%= scope.lookupvar('dariahrepository::services::pid::pid_path') %>
handleservice.prefix = <%= scope.lookupvar('dariahrepository::services::pid::pid_prefix') %>
handleservice.user = <%= scope.lookupvar('dariahrepository::services::pid::pid_user') %>
handleservice.pw = <%= scope.lookupvar('dariahrepository::services::pid::pid_passwd') %>

# Handle resolver (read-only)
resolver.endpoint = http://hdl.handle.net
resolver.path = /api/handles/

# More settings
pid.responsible =
pid.creator =
pid.publisher =
pid.secret = <%= scope.lookupvar('dariahrepository::services::pid::pid_secret') %>
tgauth.endpoint =
log.location = /var/log/dariah/pid/pid.log
service.endpoint = http://localhost:9094/dhpid
