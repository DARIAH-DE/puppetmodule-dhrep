# EPIC PID service settings (GWDG)
handleservice.endpoint = <%= scope.lookupvar('dhrep::services::pid::endpoint') %>
handleservice.path = <%= scope.lookupvar('dhrep::services::pid::path') %>
handleservice.prefix = <%= scope.lookupvar('profiles::textgridrepository::pid_prefix') %>
handleservice.user = <%= scope.lookupvar('profiles::textgridrepository::pid_user') %>
handleservice.pw = <%= scope.lookupvar('profiles::textgridrepository::pid_passwd') %>

# Handle resolver (read-only)
resolver.endpoint = https://hdl.handle.net
resolver.path = /api/handles/

# More settings
pid.responsible = <%= scope.lookupvar('dhrep::services::pid::responsible') %>
pid.creator = <%= scope.lookupvar('dhrep::services::pid::creator') %>
pid.publisher = <%= scope.lookupvar('dhrep::services::pid::publisher') %>
pid.secret = <%= scope.lookupvar('profiles::textgridrepository::pid_secret') %>
tgauth.endpoint =
log.location = /var/log/dhrep/dhpid/pid.log
service.endpoint = http://localhost:9094/dhpid
