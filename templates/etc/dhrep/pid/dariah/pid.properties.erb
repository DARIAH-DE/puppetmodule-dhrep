# EPIC PID service settings (GWDG)
handleservice.endpoint = <%= @endpoint %>
handleservice.path = <%= @path %>
handleservice.prefix = <%= @prefix %>
handleservice.user = <%= @user %>
handleservice.pw = <%= @passwd %>

# Handle resolver (read-only)
resolver.endpoint = http://hdl.handle.net
resolver.path = /api/handles/

# DataCite DOI service
# DOI Prefix without /!
doi.prefix = <%= @doi_prefix %>
# DOI Server
doi.server = <%= @doi_endpoint %>
doi.user = <%= @doi_user %>
doi.pw = <%= @doi_passwd %>
# This is the target of the DOI identifier, currently we use the Handle server
# because we need custom metadata. Please keep the #ID as placeholder!
doi.targetUrl = <%= @doi_target_url %>
doi.publisher = <%= @doi_publisher %>

# More settings
pid.responsible = <%= @responsible %>
pid.creator = <%= @creator %>
pid.secret = <%= @secret %>
tgauth.endpoint =
log.location = /var/log/dhrep/dhpid/pid.log
log.level = ALL
service.endpoint = http://localhost:<%= scope.lookupvar('dhrep::services::tomcat_pid::http_port') %>/dhpid
