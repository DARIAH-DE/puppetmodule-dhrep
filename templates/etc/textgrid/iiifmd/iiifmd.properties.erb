# location of this service
serviceBaseUrl=http://<%= scope.lookupvar('::fqdn') %>/1.0/iiif/manifests

# sparql endpoint of triplestore
sparqlEndpoint=http://localhost:9091/openrdf-sesame/repositories/textgrid-public

# tgcrud url
tgcrudUrl=http://<%= scope.lookupvar('::fqdn') %>/1.0/tgcrud-public/rest
tgsearchUrl=http://<%= scope.lookupvar('::fqdn') %>/1.0/tgsearch-public

# Elasticsearch config
esCluster= <%= scope.lookupvar('dhrep::services::intern::tgelasticsearch::cluster_name') %>
esNodes=127.0.0.1:<%= scope.lookupvar('dhrep::params::tgelasticsearch_master_tcp_port') %>
esIndex=textgrid-public
esType=metadata

# location and conformance level of iiif service
iiifService.url=http://<%= scope.lookupvar('::fqdn') %>/1.0/digilib/rest/IIIF
iiifService.conformance=http://library.stanford.edu/iiif/image-api/1.1/compliance.html#level1

# cache directory, needs to be existing and writeable
cacheDir=/var/textgrid/iiifmd/cache

# xslt file for extracting ordered uris from mets file (from resources/xslt folder)
metsXsltFile=metsExtract.xsl

# jsonld output specific settings
jsonld.contextUrl=http://iiif.io/api/presentation/2/context.json

# textgrid projects which should be listed for IIIF (comma separated)
listedProjects=TGPR-2e532567-c3e3-36f5-3ecc-520cea7904cc,TGPR-2c283391-6ed5-70b4-2e5e-5501c856bca9,TGPR-d303e6d9-435d-4c98-aadc-5540cd346cfa,TGPR-16e20ddd-e4a5-d225-7db7-55eea81d6306

# url for textgridrep website
textgridrepUrl=http://textgridrep.de/sandbox/browse?id=

miradorUrl=http://<%= scope.lookupvar('::fqdn') %>/1.0/iiif/mirador/view.html?uri=

